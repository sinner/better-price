extends ../layout

block styles
    link(rel='stylesheet', href='/css/registration.css')

block content
    .container
        .row.main
            .panel-heading
                .panel-title.text-center
                    .text-center.login-title Sign Up
            .main-login.main-center
                form.form-signin(role='form', action="/register", method="post")
                    .form-group
                        label.cols-sm-2.control-label(for='name') Your Name
                        .cols-sm-10
                            .input-group
                                span.input-group-addon
                                    i.fa.fa-user.fa(aria-hidden='true')
                                input#name.form-control(type='text', name='name', placeholder='Enter your Name',autocomplete="off", required)
                            if(errors && errors.name)
                                span.error #{errors.name.message}
                    .form-group
                        label.cols-sm-2.control-label(for='email') Your Email
                        .cols-sm-10
                            .input-group
                                span.input-group-addon
                                    i.fa.fa-envelope.fa(aria-hidden='true')
                                input#email.form-control(type='email', name='email', placeholder='Enter your Email',autocomplete="off", required)
                            if(errors && errors.email)
                                span.error #{errors.email.message}
                    .form-group
                        label.cols-sm-2.control-label(for='username') Username
                        .cols-sm-10
                            .input-group
                                span.input-group-addon
                                    i.fa.fa-users.fa(aria-hidden='true')
                                input#username.form-control(type='text', name='username', placeholder='Enter your Username', autocomplete="off", required)
                            if(errors && errors.username)
                                span.error #{errors.username.message}
                    .form-group
                        label.cols-sm-2.control-label(for='password') Password
                        .cols-sm-10
                            .input-group
                                span.input-group-addon
                                    i.fa.fa-lock.fa-lg(aria-hidden='true')
                                input#password.form-control(type='password', name='password', placeholder='Enter your Password', required)
                            if(errors && errors.password)
                                span.error #{errors.password.message}
                    .form-group
                        label.cols-sm-2.control-label(for='confirm') Confirm Password
                        .cols-sm-10
                            .input-group
                                span.input-group-addon
                                    i.fa.fa-lock.fa-lg(aria-hidden='true')
                                input#confirm.form-control(type='password', name='confirm', placeholder='Confirm your Password', required)
                    .form-group
                        button.btn.btn-primary.btn-lg.btn-block.login-button(type='submit') Register
                    .login-register
                        a(href='index.php') Login