doctype html
html
    head
        title='Express Test'
        meta(charset='utf-8')
        link(rel='icon', type='image/png', href='http://expressjs.com/images/favicon.png')
        link(rel='stylesheet', href='/assets/vendor/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet', href='/assets/vendor/bootstrap/dist/css/bootstrap-theme.css')
        link(rel='stylesheet', href='/assets/vendor/font-awesome/css/font-awesome.css')
        link(rel='stylesheet', href='/assets/vendor/angular-loading-bar/build/loading-bar.css')
        link(rel='stylesheet', href='/css/style.css')
        block styles
    body
        header.navbar.navbar-default.navbar-expand-lg.fixed-top
            div.navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='/') Express Test
            div.collapse.navbar-collapse(id='bs-example-navbar-collapse-1')
                ul.nav.navbar-nav.navbar-right
                    if (!user)
                        li
                            a(href='/login') Login
                        li
                            a(href='/register') Register
                    if (user)
                        li
                            a Welcome #{user.name}
                        li
                            a(href='/logout') Logout
        .jumbotron
            .container
                h1 HN Feed
                p We <3 hacker news!
        div.container
            div.content
                block content
        script(src='/assets/vendor/jquery/dist/jquery.js')
        script(src='/assets/vendor/bootstrap/dist/js/bootstrap.js')
        script(src='/assets/vendor/angular/angular.js')
        script(src='/assets/vendor/angular-sanitize/angular-sanitize.js')
        script(src='/assets/vendor/angular-loading-bar/build/loading-bar.js')
        block javascript
